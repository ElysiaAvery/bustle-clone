{{#if addNewArticle}}
  <h1>New Article</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title: </label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="story">Story: </label>
        {{input value=story id="story"}}
      </div>

      <div class="form-group">
        <label for="image">Image: </label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'saveArticle1'}}>Save Article</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
